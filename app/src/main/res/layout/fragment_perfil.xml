<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.perfil.PerfilFragment">

    <TextView
        android:id="@+id/tvMail2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="16dp"
        android:text="Mail:"
        app:layout_constraintBottom_toTopOf="@+id/tvTel"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvNombre2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="16dp"
        android:text="Nombre:"
        app:layout_constraintBottom_toTopOf="@+id/tvApe"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvApe2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="16dp"
        android:text="Apellido:"
        app:layout_constraintBottom_toTopOf="@+id/tvMail"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTel2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="240dp"
        android:text="Telefono:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivPropietario"
        android:layout_width="379dp"
        android:layout_height="171dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toTopOf="@+id/tvNombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@tools:sample/avatars" />

    <EditText
        android:id="@+id/tvNombre"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:hint="Nombre"
        app:layout_constraintBottom_toTopOf="@+id/tvApe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvNombre2" />

    <EditText
        android:id="@+id/tvTel"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="240dp"
        android:hint="Telefono"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvTel2" />

    <EditText
        android:id="@+id/tvApe"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:hint="Apellido"
        app:layout_constraintBottom_toTopOf="@+id/tvMail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvApe2" />

    <EditText
        android:id="@+id/tvMail"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:hint="Mail"
        app:layout_constraintBottom_toTopOf="@+id/tvTel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvMail2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="150dp"
        android:text="Editar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="150dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>