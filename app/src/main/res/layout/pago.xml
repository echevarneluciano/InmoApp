<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="580dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="#00BCD4"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:contentPadding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tvPnumero2"
            android:layout_width="150dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:text="Numero:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPFecha2"
            android:layout_width="150dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:text="Fecha de pago:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPImporte" />

        <TextView
            android:id="@+id/tvPContrato2"
            android:layout_width="150dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:text="Domicilio Inmueble:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPnumero" />

        <TextView
            android:id="@+id/tvPImporte2"
            android:layout_width="150dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:text="Importe:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPContrato" />

        <TextView
            android:id="@+id/tvPnumero"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="110dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPContrato"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="90dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPnumero" />

        <TextView
            android:id="@+id/tvPImporte"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="90dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPContrato" />

        <TextView
            android:id="@+id/tvPFecha"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="90dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPImporte" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="130dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="Pago"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>