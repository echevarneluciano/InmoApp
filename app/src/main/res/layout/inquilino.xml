<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="187dp"
    android:layout_height="350dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="#00BCD4"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:contentPadding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tvIDni2"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:layout_marginTop="50dp"
            android:text="D.N.I:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvIApellido2"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:layout_marginTop="20dp"
            android:text="Apellido:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvINombre" />

        <TextView
            android:id="@+id/tvINombre2"
            android:layout_width="75dp"
            android:layout_height="28dp"
            android:layout_marginTop="20dp"
            android:text="Nombre:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvIDni" />

        <TextView
            android:id="@+id/tvIDni"
            android:layout_width="85dp"
            android:layout_height="28dp"
            android:layout_marginTop="50dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvIDni2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvINombre"
            android:layout_width="85dp"
            android:layout_height="28dp"
            android:layout_marginTop="20dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvINombre2"
            app:layout_constraintTop_toBottomOf="@+id/tvIDni" />

        <TextView
            android:id="@+id/tvIApellido"
            android:layout_width="85dp"
            android:layout_height="28dp"
            android:layout_marginTop="20dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvIApellido2"
            app:layout_constraintTop_toBottomOf="@+id/tvINombre" />

        <Button
            android:id="@+id/btIDetalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Detalles"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>