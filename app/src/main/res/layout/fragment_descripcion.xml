<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="630dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#00BCD4"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:contentPadding="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.inmuebles.DescripcionFragment">

            <TextView
                android:id="@+id/tvDUso4"
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="20dp"
                android:text="Uso: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDDireccion" />

            <ImageView
                android:id="@+id/ivDetalle"
                android:layout_width="232dp"
                android:layout_height="221dp"
                android:layout_marginTop="45dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvDDireccion"
                android:layout_width="150dp"
                android:layout_height="33dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/tvDDireccion2"
                app:layout_constraintTop_toBottomOf="@+id/ivDetalle" />

            <TextView
                android:id="@+id/tvDDireccion2"
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="20dp"
                android:text="Direccion: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivDetalle" />

            <TextView
                android:id="@+id/tvDUso"
                android:layout_width="150dp"
                android:layout_height="33dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/tvDUso4"
                app:layout_constraintTop_toBottomOf="@+id/tvDDireccion" />

            <TextView
                android:id="@+id/tvDTipo"
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/tvDTipo2"
                app:layout_constraintTop_toBottomOf="@+id/tvDUso" />

            <TextView
                android:id="@+id/tvDTipo2"
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="20dp"
                android:text="Tipo: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDUso" />

            <TextView
                android:id="@+id/tvDAmbientes"
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDTipo" />

            <TextView
                android:id="@+id/tvDAmbientes2"
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="20dp"
                android:text="Ambientes: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDTipo" />

            <TextView
                android:id="@+id/tvDPrecio"
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDAmbientes" />

            <TextView
                android:id="@+id/tvDPrecio2"
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="20dp"
                android:text="Precio: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDAmbientes" />

            <Switch
                android:id="@+id/swDActivo"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="15dp"
                android:switchTextAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Estado"
                android:textOff="Inactivo"
                android:textOn="Activo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.017"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDPrecio"
                app:layout_constraintVertical_bias="0.066" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:text="Detalles"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>